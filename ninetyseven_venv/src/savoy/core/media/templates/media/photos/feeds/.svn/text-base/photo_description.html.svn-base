{% autoescape off %}

{% if obj.is_flickr_photo %}
  <img src="{{ obj.flickr_photo.medium_image_url }}" title="{{ obj.title }}" alt="{{ obj.title }}" />
{% else %}
  <img src="{{ obj.get_image_url }}" title="{{ obj.title }}" alt="{{ obj.title }}" />
{% endif %}
{{ obj.description|markdown|typogrify }}

{% endautoescape %}