{% extends "base.html" %}

{% block title %}Statuses{% endblock %}

{% block content %}
  <h2>Statuses</h2>
  <ul>
    {% for status in statuses %}
      <li><a href="{{ status.get_absolute_url }}">{{ status.body|typogrify }}</a></li>
    {% endfor %}
  </ul>
{% endblock %}

{% block sidebar %}
  <h3>Archives</h3>
  <ul>
    {% for year in date_list %}
      <li><a href="{% url status_index %}{{ year|date:"Y" }}/">{{ year|date:"Y" }}</a></li>
    {% endfor %}
  </ul>
{% endblock %}