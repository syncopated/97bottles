{% extends "base.html" %}

{% block title %}Comments for {{ day|date:"F, jS, Y" }}{% endblock %}

{% block content %}
  <h2>Comments for {{ day|date:"F, jS, Y" }}</h2>
  <ul>
    {% for comment in comment_list %}
      <li><a href="{{ comment.get_absolute_url }}">{{ comment.author_name }}</a> on <a href="{{ comment.content_object.get_absolute_url }}">{{ comment.content_object.title }}</a></li>
    {% endfor %}
  </ul>
{% endblock %}