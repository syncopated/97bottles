{% extends "base.html" %}

{% block title %}Comments for {{ year }}{% endblock %}

{% block content %}
  <h2>Comments for {{ year }}</h2>
  <ul>
    {% for month in date_list %}
      <li><a href="{% url comment_index %}{{ year }}/{{ month|date:"b" }}/">{{ month|date:"F" }}</a></li>
    {% endfor %}
  </ul>
{% endblock %}