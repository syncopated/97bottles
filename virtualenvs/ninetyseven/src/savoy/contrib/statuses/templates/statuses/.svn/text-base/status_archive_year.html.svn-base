{% extends "base.html" %}

{% block title %}Statuses for {{ year }}{% endblock %}

{% block content %}
  <h2>Statuses for {{ year }}</h2>
  <ul>
    {% for status in status_list %}
      <li><a href="{{ status.get_absolute_url }}">{{ status.body|typogrify }}</a></li>
    {% endfor %}
  </ul>
{% endblock %}

{% block sidebar %}
  <h3>{{ year }}</h3>
  <ul>
    {% for month in date_list %}
      <li><a href="{% url status_index %}{{ year }}/{{ month|date:"b" }}/">{{ month|date:"F" }}</a></li>
    {% endfor %}
  </ul>
{% endblock %}