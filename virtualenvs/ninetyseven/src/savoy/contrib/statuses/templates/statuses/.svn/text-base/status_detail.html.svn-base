{% extends "base.html" %}

{% block title %}Status{% endblock %}

{% block content %}
  <h2>{{ status.date_published|date:"F jS, Y" }} at {{ status.date_published|date:"P" }}</h2>
  {{ status.body|typogrify }}
  
  <h2>Comments</h2>
  {% display_comment_list status %}
  
  <h3>Add a comment</h3>
  {% display_comment_form status %}
{% endblock %}