{% extends "base.html" %}

{% block title %}Password reset{% endblock %}

{% block content %}

<h2>Password reset</h2>

<p>Forgotten your password? Enter your e-mail address below, and we'll send a new password to you.</p>

<form action="" method="post">
  <fieldset>
    {% if form.email.errors %}
      <p class="error">{{ form.email.html_error_list }}</p>
    {% endif %}
    <label for="id_email">E-mail address:</label> {{ form.email }}
    <label class="help">Be sure to enter the same e-mail address you used to sign up .</label>
    
    <label for="id_submit">Submit</label>
    <input id="id_submit" type="submit" value="{% trans 'Reset password' %}" />
  </fieldset>
</form>

{% endblock %}
