{% extends "base.html" %}

{% block title %}Change your password{% endblock %}

{% block content %}
<h2>Change your password</h2>
<p>For the sake of security, please enter your old password, and then enter your new password twice.</p>

<form action="" method="post">
  {% if form.old_password.errors %}
    {{ form.old_password.html_error_list }}
  {% endif %}
  <label for="id_old_password">Old password:</label>
  {{ form.old_password }}<br />
  
  {% if form.new_password1.errors %}
    {{ form.new_password1.html_error_list }}
  {% endif %}
  <label for="id_new_password1">New password:</label>
  {{ form.new_password1 }}<br />
  
  {% if form.new_password2.errors %}
    {{ form.new_password2.html_error_list }}
  {% endif %}
  <label for="id_new_password2">Confirm new password:</label>
  {{ form.new_password2 }}<br />
  
  <input type="submit" value="Change password" />
</form>

{% endblock %}
