{% extends "base.html" %}

{% block title %}Login{% endblock %}


{% block content %}

<h2>Login</h2>

<p>Enter your username and password below to log in.</p>

{% if error_message %}
  <p class="error">{{ error_message }}</p>
{% endif %}

<form action="{{ app_path }}" method="post">
  <fieldset>
    {% if form.username.errors %}
      <p class="error">{{ form.username.errors|join:", "}}</p>
    {% endif %}
    <label for="id_username">Username</label>
    <input type="text" name="username" id="id_username" /><br />
    
    {% if form.password.errors %}
      <p class="error">{{ form.password.errors|join:", "}}</p>
    {% endif %}
    <label for="id_password">Password</label>
    <label for="id_password" class="help"><a href="/accounts/password/change/">Forgotten your password</a>?</label>
    <input type="password" name="password" id="id_password" />
    
    <input type="hidden" name="this_is_the_login_form" value="1" />
    <input type="hidden" name="post_data" value="{{ post_data }}" />

    <label for="id_submit">Submit</label>
    <input id="id_submit" type="submit" value="Log in" />
  </fieldset>
</form>

{% endblock %}
