{% with object as beer %}
  added <a href="{{ beer.get_absolute_url }}">{{ beer.name }}</a>, by <a href="{{ beer.brewery.get_absolute_url }}">{{ beer.brewery.name }}</a>.  
  <span class="timeline-item-timestamp"> {% ifchanged item.timestamp.minute %}{{ item.timestamp|date:"fA"|lower }}{% endifchanged %}</span>
{% endwith %}