{% extends "base.html" %}

{% block title %}Blogs{% endblock %}

{% block content %}
  <h2>Blogs</h2>
  <ul>
    {% for blog in blog_list %}
      <li>
        <strong><a href="{{ blog.get_absolute_url }}">{{ blog.title }}</a></strong>
        by {% for author in blog.authors.all %}{{ author.full_name }}{% if not forloop.last %}, {% if forloop.revcounter1 %} and {% endif %}{% endif %}{% endfor %}
      </li>
    {% endfor %}
  </ul>
{% endblock %}